{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "prHourlyLimit": 0,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "@commitlint",
      "matchPackagePrefixes": [
        "@commitlint/"
      ]
    }
  ]
}
